<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.afume.afume_android.ui.signin.SignHomeActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.signin.SignHomeActivity">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sign_bg" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:text="로그인 하기"
            android:onClick="onClickSignInBtn"
            android:fontFamily="@font/notosans_bold"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:background="@drawable/border_black_fill_2"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="40dp"
            android:text="회원가입하기"
            android:onClick="onClickSignUpBtn"
            android:fontFamily="@font/notosans_bold"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:textColor="@color/primary_black"
            android:background="@drawable/border_white_fill_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>