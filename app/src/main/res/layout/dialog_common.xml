<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/common_dialog_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_common_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="로그인 후 사용 가능합니다.\n로그인을 해주세요."
            android:gravity="center"
            android:fontFamily="@font/notosans_regular"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:textColor="@color/black_1d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_common_dialog_no"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/gray_cd"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_common_dialog_yes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_common_dialog_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_common_dialog_yes"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/black_1d"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="로그인하기"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_common_dialog_no"
            app:layout_constraintTop_toTopOf="@+id/btn_common_dialog_no" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>