<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="closeIcon">@drawable/icon_cancel_white</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIconTint">@color/white</item>
        <item name="closeIconStartPadding">4dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/point_beige</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="SearchFilterChipStyle" parent="SearchChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>