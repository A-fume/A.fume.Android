<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AfumeAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/point_beige</item>
        <item name="colorSecondaryVariant">@color/point_beige_accent</item>
        <item name="colorOnSecondary">@color/point_beige_90</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>

        <!--Navigation Drawer margin-->
        <item name="listPreferredItemHeightSmall">36dp</item>

    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/nanummyeongjo_bold</item>
        <item name="colorControlNormal">@color/point_beige</item>
    </style>

    <style name="Theme.AfumeAndroid.Tabtext" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/dark_gray_7d</item>
    </style>

    <style name="Theme.AfumeAndroid.NavigationDrawerText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>