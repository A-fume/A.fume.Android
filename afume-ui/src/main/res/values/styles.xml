<resources>
    <style name="AfumeUI.SelectBox" parent="android:Widget">
        <item name="android:background">@drawable/afume_ui_select_box_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/afume_ui_select_box_text_color</item>

        <item name="android:minHeight">@dimen/afume_ui_select_box_medium_minHeight</item>
        <item name="android:paddingStart">@dimen/afume_ui_select_box_medium_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/afume_ui_select_box_medium_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/afume_ui_select_box_medium_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/afume_ui_select_box_medium_paddingVertical</item>
        <item name="android:textSize">@dimen/afume_ui_select_box_medium_textSize</item>
    </style>

    <style name="AfumeUI.SelectBox.Medium" parent="AfumeUI.SelectBox"/>

    <style name="AfumeUI.SelectBox.Small" parent="AfumeUI.SelectBox">
        <item name="android:minHeight">@dimen/afume_ui_select_box_small_minHeight</item>
        <item name="android:paddingStart">@dimen/afume_ui_select_box_small_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/afume_ui_select_box_small_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/afume_ui_select_box_small_paddingTop</item>
        <item name="android:paddingBottom">@dimen/afume_ui_select_box_small_paddingBottom</item>
        <item name="android:textSize">@dimen/afume_ui_select_box_small_textSize</item>
    </style>
</resources>